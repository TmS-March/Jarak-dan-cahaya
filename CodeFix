#include <LiquidCrystal.h>

LiquidCrystal lcd(2, 3, 4, 5, 6, 7);
const int trigPin = 0;
const int echoPin = 1;
long duration;
int distanceCm;
int hasilSensorLDR;



void setup() 
{
  lcd.begin(16,2);
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(A0, OUTPUT);
}

void loop()
{
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distanceCm= duration*0.034/2;
  if (25<distanceCm)
  {
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("Jarak Baca: ");
    lcd.print(distanceCm);
    lcd.print ("cm");
    delay(1000);
    lcd.clear();  
    delay(1000);
  }
  else 
  {
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("Jarak Baca: ");
    lcd.print(distanceCm);
    lcd.print ("cm");
    delay(1000);
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("Terlalu Dekat");
    lcd.setCursor(0,0);
    delay(1000); 
    lcd.clear();
    delay (1000);
  }
  hasilSensorLDR = analogRead(A0);
  if (48<hasilSensorLDR)
  {
    lcd.setCursor(0,1);
    lcd.print("Hasil LDR: ");
    lcd.print(hasilSensorLDR);
    delay(1000);
    lcd.clear();  
    delay(1000);
  }
  else
  {
    lcd.setCursor(0,1);
    lcd.print("Hasil LDR: ");
    lcd.print(hasilSensorLDR);
    delay(1000);
    lcd.clear();
    lcd.setCursor(0,1);
    lcd.print("Kurang Cahaya");
    delay(1000); 
    lcd.clear();
    delay (1000);
  }
}
